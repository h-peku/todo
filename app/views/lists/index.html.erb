<p style="color: green"><%= notice %></p>

<% content_for :title, "Lists" %>

<h1>To-Do List</h1>
<table>
  <thead>
    <tr>
      <th>Todo Item</th>
      <th>Done?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lists.each do |list| %>
    <tr>
      <td><%=  list.description %></td>
      <td><%=  list.completed %></td>
      <td><%= link_to 'Show', list %></td>
      <td><%= link_to 'Edit', edit_list_path(list) %></td>
      <td><%= link_to 'Destroy', list, data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>


<%= link_to "New To-Do", new_list_path %>
